<Window x:Class="CodeShare.FriendChoose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:CodeShare"
        ResizeMode="NoResize"
        mc:Ignorable="d" 
        d:DesignHeight="500" d:DesignWidth="600"
        Height="500" Width="350">
    <Grid>
        <ListBox Name="ListBox" Margin="40,70,40,80">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding FirstName}"/>
                        <Label Content="{Binding LastName}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Click="Send"  Name="Button" Content="Send" Margin="0, 0, 40, 25" VerticalAlignment="Bottom" HorizontalAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="100" Height="25"/>
        <Label Content="Send to" Margin="0,25,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="100"/>
    </Grid>
</Window>
